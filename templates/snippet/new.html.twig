{% extends 'base.html.twig' %}

{% block title %}Crea un Snippet{% endblock %}

{% block body %}
    <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-2xl font-semibold sm:text-5xl">Crea un Snippet</h2>
        <p class="mt-2 text-lg text-gray-600">
            Un Snippet es un fragmento de código que puedes compartir con otros. 
        </p>
    </div>

    <form method="POST" class="mx-auto mt-16 max-w-xl sm:mt-20">
        {% if errors %}
            <div class="bg-red-100 text-red-700 p-2 rounded mb-4 space-y-1">
                {% for error in errors %}
                    <div>⚠️ {{ error.message }}</div>
                {% endfor %}
            </div>
        {% endif %}

        <div class="mb-4">
            <label class="block text-sm font-semibold mb-1">Título</label>
            <input type="text" name="title" value="{{ data.title ?? '' }}" class="block w-full rounded-md bg-white px-4 py-2 text-gray-900" autofocus>
        </div>

        <div class="mb-4">
            <label class="block text-sm font-semibold mb-1">Descripción</label>
            <textarea name="description" class="block w-full rounded-md bg-white px-4 py-2 text-gray-900" rows="2">{{ data.description ?? '' }}</textarea>
        </div>

        <div class="mb-4">
            <label class="block text-sm font-semibold mb-1">Código</label>
            <textarea name="code" class="block w-full rounded-md bg-white px-4 py-2 text-gray-900" rows="6">{{ data.code ?? '' }}</textarea>
        </div>

        <div class="mt-10">
            <button type="submit" class="block w-full rounded-md bg-indigo-600 px-4 py-2 text-center text-sm font-semibold text-white shadow-xs hover:bg-indigo-500">Crear</button>
        </div>
    </form>
{% endblock %}